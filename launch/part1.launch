<launch>
    <arg name="node_start_delay1" default="3.0" />  
    <arg name="node_start_delay2" default="13.0" />  

    <!-- Declare a parameter for the node -->
    <!-- <param name="example_param" type="str" value="custom_value"/> -->
    <node name="stage_launcher" pkg="sphero_stage" type="start.py" output="screen" />

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find mrs-r1)/rviz/vis.rviz" launch-prefix="bash -c 'sleep $(arg node_start_delay1); $0 $@' "/>
    <!-- <node pkg="rviz" type="rviz" name="rviz" args="-d $(find mrs-r1)/rviz/vis.rviz" /> -->

    <!-- Run the example node -->
    <node name="reynolds_part_1" pkg="mrs-r1" type="reynolds.py" output="screen" launch-prefix="bash -c 'sleep $(arg node_start_delay2); $0 $@' ">
        <rosparam file="$(find mrs-r1)/params.yaml"/>
    </node>


</launch>